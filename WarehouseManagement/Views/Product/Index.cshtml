<!DOCTYPE html>

<html>
<head>
    <title>Warehouse Software</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <style>
        body {
            display: flex;
            flex-direction: column;
            background-color: dodgerblue;
            text-align: center;
            align-items: center;

        }

        form {
            height: 100%;
        }

        h1 {
            margin-top: 4em;
            margin-bottom: 1.5em;
        }

        table {
        }

        #buttons {
            height: 50px;
            margin-bottom: 2em;
            background-color: antiquewhite;
            width: 100%;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>
                <h1>Raktárkezelő</h1>
            </th>
        </tr>
        <tr>
            <td>
                <form action="/products">
                    <input class="btn btn-light" id="buttons" type="submit" value="Termékek" />
                </form>
            </td>
        </tr>
        @if (Model)
        {
            <tr>
                <td>
                    <form action="/inventory">
                        <input class="btn btn-light" id="buttons" type="submit" value="Készlet" />
                    </form>
                </td>
            </tr>
            <tr>
                <td>
                    <form action="/stats">
                        <input class="btn btn-light" id="buttons" type="submit" value="Statisztika" />
                    </form>
                </td>
            </tr>
        }
    </table>
</body>
</html>
